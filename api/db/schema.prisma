datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model User {
  id               Int         @id @default(autoincrement())
  universityUserId String      @unique
  name             String?
  hashedPassword   String
  tokens           UserToken[]
  roles            Role[]
}

model Role {
  id    Int    @id @default(autoincrement())
  type  String @unique
  users User[]
}

model UserToken {
  id     Int    @id @default(autoincrement())
  token  String
  user   User   @relation(fields: [userId], references: [id])
  userId Int
}
